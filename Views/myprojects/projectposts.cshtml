@using atakanozbancomtr.Models.classes
@model List<myprojects>

<p class="text-center">
    I'm posting here just my web projects. You can check out my <a href="https://www.github.com/atakanozban" style="text-decoration: none; color: darkgrey;" target="_blank">GitHub</a> page for others. <br> For uptime checking of speedtest servers and website you can visit <a href="https://status.atakanozban.com/status/default" style="text-decoration: none; color: darkgrey;" target="_blank">here</a>.
</p>

@foreach (var x in Model)
{
    <img src="@x.image" class="img-fluid mx-auto d-block mt-5">
    if (!string.IsNullOrEmpty(x.iframe))
    {
        <iframe src="@x.iframe"
                width="600"
                height="400"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    }
    <h3 class="mt-3">@x.title</h3>
    <p class="lead mb-5">@x.description</p>
}
